<% provide(:title,"New Item") %>
<h1>Add New Item</h1>
<div class= "row">
    <div class = "col-md-6 col-md-offset-3">
        <%= form_for(@item, :html => { :multipart => true }) do |f| %>
            <%= f.label :email, :autofocuse => true  %>
            <%= f.text_field :email, :required => true %>
   
            <%= f.label :title %>
            <%= f.text_field :title, :required => true %>
    
            <%= f.label :price%>
            <%= f.text_field :price , :required => true %>
    
            <%= f.label :description%>
            <%= f.text_area :description, :required => true %>
    
            <%= f.collection_select :category_id, Category.all, :id, :name, prompt: true, :prompt => "Please select a Category"%>
    
            <%= f.fields_for :item_image do |p| %>
               <%= p.label :picture %>
               <%= p.file_field :picture, :multiple => true, name: "item_images[picture][]" , accept: 'image/jpeg,image/gif,image/png'%>
            <% end %>
           
              <%= f.submit "Add Item", class: "btn btn-primary"%>
          
       <% end %>
   </div>
 </div>
 <%= render 'shared/browse_cat'%>
 
 <script type = "text/javascript">
     $('#item_item_image_picture').bind('change',function() {
        size_mb = this.files[0].size/1024/1024;
        if (size_mb > 5) {
            alert("Image should be lesser than 5MB");
        }
         
     });
 </script>

   